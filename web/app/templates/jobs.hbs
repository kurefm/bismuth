{{#ma-card title=(t 'labels.jobs')}}
  <table class="table">
    <thead>
      <tr>
        <th>{{t 'labels.jobs.name'}}</th>
        <th>{{t 'labels.jobs.jobkey'}}</th>
        <th>{{t 'labels.jobs.cron'}}</th>
        <th>{{t 'labels.jobs.start_at'}}</th>
        <th>{{t 'labels.jobs.count'}}</th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |job|}}
        <tr>
          <th>{{t job.id}}</th>
          <th>{{job.jobkey}}</th>
          <th><code>{{job.cron}}</code></th>
          <th>{{moment-format job.start_at 'LLL'}}</th>
          <th>{{job.count}}</th>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{/ma-card}}