{{#ma-card title=(t 'labels.tls-records') padding=false}}
  <table class="table table-striped vertical-meddle">
    <thead>
      <tr>
        <th>{{t 'labels.no'}}</th>
        <th>{{t 'labels.ids.src'}}</th>
        <th>{{t 'labels.ids.desc'}}</th>
        <th>{{t 'labels.tls-records.version'}}</th>
        <th>{{t 'labels.tls-records.fingerprint'}}</th>
        <th>{{t 'labels.tls-records.subject'}}</th>
        <th>{{t 'labels.ids.timestamp'}}</th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |tls index|}}
        <tr>
          <td>{{list-item index page limit}}</td>
          <td>{{tls.srcIp}}:{{tls.srcPort}}</td>
          <td>{{tls.destIp}}:{{tls.destPort}}</td>
          <td>{{tls.tls.version}}</td>
          <td>{{tls.tls.fingerprint}}</td>
          <td>{{tls.tls.subject}}</td>
          <td>{{moment-format tls.timestamp 'LLL'}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <div class="bootgrid-footer">
    <div class="row">
      <div class="col-sm-6">
        {{ma-pagination total=totalPages start=startPage current=page size=windowSize}}
      </div>
    </div>
  </div>
{{/ma-card}}
